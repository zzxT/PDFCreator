<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_file_pdf_box_white_48dp"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/editText"
        android:hint="@string/add_text_hint_enterText"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_above="@+id/fab"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/fab_margin" />

    <android.support.design.widget.FloatingActionButton
        app:fabSize="mini"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:id="@+id/fab_1"
        android:src="@drawable/ic_delete_white_48dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/fab_margin"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin" />

    <android.support.design.widget.FloatingActionButton
        app:fabSize="mini"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:id="@+id/fab_2"
        android:src="@drawable/ic_call_merge_white_48dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/fab_margin"
        tools:ignore="ContentDescription"
        android:layout_below="@+id/fab_1"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/fab_margin" />

    <android.support.design.widget.FloatingActionButton
        app:fabSize="mini"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:id="@+id/fab_3"
        android:src="@drawable/ic_security_white_48dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/fab_margin"
        tools:ignore="ContentDescription"
        android:layout_below="@+id/fab_2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/fab_margin" />

    <android.support.design.widget.FloatingActionButton
        app:fabSize="mini"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:id="@+id/fab_4"
        android:src="@drawable/ic_pound_white_48dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/fab_margin"
        tools:ignore="ContentDescription"
        android:layout_below="@+id/fab_3"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/fab_margin" />

    <android.support.design.widget.FloatingActionButton
        app:fabSize="mini"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:id="@+id/fab_5"
        android:src="@drawable/ic_file_image_white_48dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/fab_margin"
        tools:ignore="ContentDescription"
        android:layout_below="@+id/fab_4"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/fab_margin" />

    <android.support.design.widget.FloatingActionButton
        app:fabSize="mini"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginLeft="@dimen/fab_margin"
        android:id="@+id/fab_6"
        android:src="@drawable/ic_file_pdf_white_48dp"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/fab_margin"
        tools:ignore="ContentDescription"
        android:layout_below="@+id/fab_5"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_toStartOf="@+id/fab_6" />

</RelativeLayout>
